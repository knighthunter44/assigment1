<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="serif"
        android:text="Personal Info"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:text="How would you like to be addressed?"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="serif"
        android:text="Title"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Mr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fontFamily="serif"
            android:text="Mr."
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Mrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:clickable="true"
            android:fontFamily="serif"
            android:text="Mrs."
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor"
            android:textSize="16dp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/Ms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:clickable="true"
            android:fontFamily="serif"
            android:text="Ms."
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:clickable="true"
            android:fontFamily="serif"
            android:text="Others."
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor"
            android:textSize="16dp"
            android:textStyle="bold"

            />


    </LinearLayout>


    <EditText
        android:id="@+id/firstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:hint="Your First Name"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor" />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:hint="Your Last Name"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"

        />

    <EditText
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:hint="Your Gender"
        android:textColorHint="@color/textColor" />

    <EditText
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:hint="Your Country"
        android:textColorHint="@color/textColor" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="I consent, to the processing of my personal data in accordance with the VistaJet privacy policy, and to the Vista Jet Direct Mobile Program terms and Conditions of Use"
        android:textColor="@color/textColor"></RadioButton>

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/button_rounded"
        android:fontFamily="serif"
        android:text="Next"
        android:textAlignment="center"

        />


</LinearLayout>